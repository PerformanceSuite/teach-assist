# TeachAssist Backend Environment Variables
# Note: All variables are prefixed with TA_ to avoid conflicts

# Anthropic API (for Claude - advisory personas, narratives)
TA_ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI API (for embeddings - text-embedding-3-small)
# Cost: ~$0.00002 per 1K tokens (~$0.01 for entire pilot)
TA_OPENAI_API_KEY=sk-your-key-here

# Server
TA_API_HOST=0.0.0.0
TA_API_PORT=8002
TA_DEBUG=true

# CORS (add your frontend URL)
TA_CORS_ORIGINS=["http://localhost:3000","https://teachassist.vercel.app"]
